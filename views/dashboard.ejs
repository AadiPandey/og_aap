<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>CTE | BITS Goa</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="https://bpgc-cte.org/logo.png" type="image/png">
</head>

<body class="bg-gray-900 text-white min-h-screen flex flex-col">

  <header class="sticky top-0 bg-gray-900/80 backdrop-blur border-b border-gray-700">
    <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
      <div class="flex items-center gap-2 font-bold text-lg">
        <img src="https://bpgc-cte.org/logo.png" alt="CTE Logo" class="w-8 h-8">
        <span>CTE | BITS Goa</span>
      </div>
      <div class="flex items-center gap-4">
        <% if (isAdmin) { %>
          <a href="/admin/dashboard" class="px-4 py-2 rounded-md bg-blue-600 hover:bg-blue-500 text-white font-medium transition">Admin Panel</a>
        <% } %>
        <a href="/logout" class="px-4 py-2 rounded-md bg-red-600 hover:bg-red-500 text-white font-medium transition">Logout</a>
      </div>
    </div>
  </header>

  <main class="flex-grow flex flex-col items-center text-center px-6 py-10">
    <h1 class="text-2xl font-bold mb-8">Welcome, <%= user.displayName %>!</h1>

    <% if (courses.length === 0) { %>
      <p class="text-gray-400">No courses available at the moment.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 w-full max-w-6xl">
        <% courses.forEach(course => { %>
          <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col items-center p-4">
            <img src="<%= course.poster_url %>" alt="<%= course.name %> poster" class="w-full h-48 object-cover mb-4 rounded">
            <h2 class="text-lg font-semibold mb-4"><%= course.name %></h2>

            <% if (registeredIds.has(course.id)) { %>
              <span class="px-4 py-2 rounded-md bg-gray-600 text-white font-medium">Registered</span>
            <% } else { %>
              <button type="button"
                class="open-course-popup px-4 py-2 rounded-md bg-green-600 hover:bg-green-500 text-white font-medium transition"
                data-course-id="<%= course.id %>"
                data-course-name="<%= course.name %>"
                data-poster-url="<%= course.poster_url %>"
                data-course-description="<%= course.course_description %>"
                data-handout-url="<%= course.handout_url %>">
                Register
              </button>
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

  <div id="coursePopup" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4"
      onclick="closeCoursePopup()">
    <div onclick="event.stopPropagation()" class="bg-gray-800 w-full max-w-md rounded-2xl overflow-hidden shadow-2xl border border-gray-700 relative text-white">
      <button onclick="closeCoursePopup()" class="absolute top-4 right-4 bg-black/40 hover:bg-black/60 p-2 rounded-full text-gray-300">âœ–</button>

      <div class="h-52 bg-gray-900 relative">
        <img id="popupImage" src="" alt="Course Poster" class="w-full h-full object-cover opacity-90">
        <div class="absolute inset-0 bg-gradient-to-t from-gray-800 via-transparent to-transparent"></div>
      </div>

      <div class="p-6 pb-8">
        <h3 id="popupTitle" class="text-2xl font-bold mb-3">Course Name</h3>
        <div class="bg-gray-700/50 p-4 rounded-xl border border-gray-600/50 max-h-48 overflow-y-auto overflow-x-hidden">
          <p id="popupDescription" class="text-gray-300 text-sm leading-relaxed break-words">
          </p>
        </div>
      </div>

      <div class="p-6 pt-0 flex gap-4">
        <button onclick="openConfirmModal()" class="flex-1 bg-green-600 hover:bg-green-700 text-white font-bold py-3.5 rounded-xl transition">Register</button>
        <a id="popupHandout" href="#" target="_blank" class="flex-1 bg-gray-700 hover:bg-gray-600 text-gray-200 font-semibold py-3.5 rounded-xl transition text-center">Handout</a>
      </div>
    </div>
  </div>

  <div id="confirmModal" class="hidden fixed inset-0 bg-black/60 z-[60] flex items-center justify-center p-4 backdrop-blur-sm"
      onclick="closeConfirmModal()">
    <div onclick="event.stopPropagation()" class="bg-gray-800 rounded-xl p-6 max-w-sm w-full border border-gray-600 shadow-2xl text-center">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
        <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <h3 class="text-lg font-bold text-white mb-2">Confirm Registration</h3>
      <p class="text-gray-300 text-sm mb-6">Do you want to register for this course?</p>
      <div class="flex gap-3 justify-center">
        <button onclick="closeConfirmModal()" class="flex-1 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg transition font-medium">Cancel</button>
        <form id="confirmForm" method="POST">
          <button type="submit" class="flex-1 px-4 py-2 bg-green-600 hover:bg-green-500 text-white rounded-lg transition font-bold">Yes, Register</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    let currentCourseId = null;

    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.open-course-popup').forEach(button => {
        button.addEventListener('click', () => {
          const courseId = button.dataset.courseId;
          const courseName = button.dataset.courseName;
          const posterUrl = button.dataset.posterUrl;
          const description = button.dataset.courseDescription;
          const handoutUrl = button.dataset.handoutUrl;

          openCoursePopup(courseId, courseName, posterUrl, description, handoutUrl);
        });
      });
    });

    function openCoursePopup(id, name, posterUrl, description, handoutUrl) {
      currentCourseId = id;
      document.getElementById('popupTitle').innerText = name;
      document.getElementById('popupImage').src = posterUrl;
      document.getElementById('popupDescription').innerText = description || 'No description available.';
      document.getElementById('popupHandout').href = handoutUrl || '#';
      document.getElementById('coursePopup').classList.remove('hidden');
    }

    function closeCoursePopup() {
      document.getElementById('coursePopup').classList.add('hidden');
    }

    function openConfirmModal() {
      document.getElementById('confirmForm').action = `/dashboard/register/${currentCourseId}`;
      document.getElementById('confirmModal').classList.remove('hidden');
    }

    function closeConfirmModal() {
      document.getElementById('confirmModal').classList.add('hidden');
    }
  </script>

</body>
</html>
